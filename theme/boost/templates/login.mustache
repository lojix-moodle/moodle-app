{{! @template theme_boost/login }}
{{> theme_boost/head }}

<body {{{ bodyattributes }}} id="page-login-index">
{{> core/local/toast/wrapper }}

<style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap');

    body#page-login-index {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        font-family: 'Inter', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #fff;
    }

    .login-container {
        background: rgba(255, 255, 255, 0.07);
        padding: 30px 25px;
        border-radius: 16px;
        width: 100%;
        max-width: 360px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        animation: fadeIn 0.6s ease-in-out;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to   { opacity: 1; transform: translateY(0); }
    }

    .login-container h2 {
        font-size: 22px;
        margin-bottom: 6px;
        text-align: center;
        font-weight: 600;
    }

    .login-container p {
        font-size: 13px;
        text-align: center;
        margin-bottom: 25px;
        color: #cfd8dc;
    }

    .login-container form {
        display: flex;
        flex-direction: column;
    }

    .login-container input[type="text"],
    .login-container input[type="password"] {
        padding: 10px 12px;
        margin-bottom: 15px;
        border: none;
        border-radius: 8px;
        font-size: 14px;
    }

    .login-container .btn-primary {
        background: linear-gradient(90deg, #6a11cb, #2575fc);
        border: none;
        padding: 10px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 14px;
        transition: 0.3s;
    }

    .login-container .btn-primary:hover {
        opacity: 0.9;
        transform: scale(1.02);
    }

    .login-container .additional-links {
        font-size: 12px;
        margin-top: 10px;
        text-align: center;
    }

    .login-container .additional-links a {
        color: #81d4fa;
        text-decoration: none;
    }

    .login-container .additional-links a:hover {
        text-decoration: underline;
    }

    @media (max-width: 480px) {
        .login-container {
            padding: 24px 20px;
            max-width: 90%;
        }

        .login-container h2 {
            font-size: 20px;
        }
    }
</style>

<div id="page-wrapper">
    {{{ output.standard_top_of_body_html }}}

    <div class="login-container">
        <h2>Hoş Geldiniz</h2>
        <p>Lojix:Depo Yönetim Paneli</p>
        {{{ output.main_content }}}
    </div>

    {{> theme_boost/footer }}
</div>

</body>
</html>

{{#js}}
    M.util.js_pending('theme_boost/loader');
    require(['theme_boost/loader'], function() {
    M.util.js_complete('theme_boost/loader');
    });
{{/js}}
