{{! @template theme_boost/login }}
{{> theme_boost/head }}

<body {{{ bodyattributes }}} id="page-login-index">
{{> core/local/toast/wrapper }}

<style>
    @import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap');

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body#page-login-index {
        font-family: 'Open Sans', sans-serif;
        background-color: #eef2f7;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    #page-wrapper {
        width: 100%;
        max-width: 420px;
        margin: 0 auto;
        padding: 15px;
    }

    .login-card {
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        position: relative;
    }

    .login-header {
        background: #1a73e8;
        padding: 30px 20px;
        text-align: center;
        color: white;
    }

    .login-logo {
        font-size: 32px;
        font-weight: 600;
        letter-spacing: -1px;
        margin-bottom: 8px;
    }

    .login-form-section {
        padding: 25px 20px;
    }

    /* Form Elements */
    .login-form-section input[type="text"],
    .login-form-section input[type="password"] {
        width: 100%;
        height: 42px;
        padding: 0 12px;
        font-size: 14px;
        border: 1px solid #dbe0e6;
        border-radius: 6px;
        background-color: #fff;
        margin-bottom: 15px;
        transition: all 0.2s;
    }

    .login-form-section input[type="text"]:focus,
    .login-form-section input[type="password"]:focus {
        border-color: #1a73e8;
        box-shadow: 0 0 0 2px rgba(26, 115, 232, 0.2);
        outline: none;
    }

    .login-form-section input[type="submit"] {
        display: block;
        width: 100%;
        height: 42px;
        background-color: #1a73e8;
        color: white;
        border: none;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.2s;
        margin-top: 5px;
    }

    .login-form-section input[type="submit"]:hover {
        background-color: #1765cc;
    }

    /* Tab Navigation */
    .login-tabs {
        display: flex;
        border-bottom: 1px solid #dbe0e6;
        margin-bottom: 20px;
    }

    .login-tab {
        flex: 1;
        text-align: center;
        padding: 15px 0;
        font-size: 14px;
        font-weight: 600;
        color: #5f6368;
        cursor: pointer;
        transition: all 0.3s;
        position: relative;
    }

    .login-tab.active {
        color: #1a73e8;
    }

    .login-tab.active:after {
        content: "";
        position: absolute;
        bottom: -1px;
        left: 0;
        width: 100%;
        height: 2px;
        background-color: #1a73e8;
    }

    /* Register Form */
    #register-form {
        display: none;
    }

    /* Hide unnecessary elements */
    .login-form-section a,
    .login-form-section .sr-only,
    .login-form-section .alert,
    .login-form-section .visually-hidden,
    .login-form-section .divider,
    #page-footer {
        display: none !important;
    }

    /* Make sure form elements are properly displayed */
    .login-form-section div,
    .login-form-section form,
    .login-form-section fieldset {
        max-width: 100%;
    }

    .login-form-section label {
        font-size: 13px;
        font-weight: 600;
        margin-bottom: 6px;
        display: block;
        color: #5f6368;
    }

    /* Responsive */
    @media (max-width: 480px) {
        #page-wrapper {
            padding: 10px;
        }

        .login-header {
            padding: 20px 15px;
        }

        .login-form-section {
            padding: 20px 15px;
        }
    }
</style>

<div id="page-wrapper">
    {{{ output.standard_top_of_body_html }}}

    <div class="login-card">
        <div class="login-header">
            <div class="login-logo">Lojix</div>
        </div>

        <div class="login-form-section">
            <div class="login-tabs">
                <div class="login-tab active" id="login-tab">Giriş</div>
                <div class="login-tab" id="register-tab">Kayıt Ol</div>
            </div>

            <!-- Login Form (Default) -->
            <div id="login-form">
                {{{ output.main_content }}}
            </div>

            <!-- Register Form (Hidden initially) -->
            <div id="register-form">
                <form method="post" action="register.php">
                    <div class="form-group">
                        <label for="fullname">Ad Soyad</label>
                        <input type="text" id="fullname" name="fullname" required>
                    </div>

                    <div class="form-group">
                        <label for="email">E-posta</label>
                        <input type="text" id="email" name="email" required>
                    </div>

                    <div class="form-group">
                        <label for="newpassword">Şifre</label>
                        <input type="password" id="newpassword" name="newpassword" required>
                    </div>

                    <div class="form-group">
                        <label for="confirmpassword">Şifre Tekrar</label>
                        <input type="password" id="confirmpassword" name="confirmpassword" required>
                    </div>

                    <input type="submit" value="Kayıt Ol">
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Function to enhance Moodle's login form
        function enhanceLoginForm() {
            // Fix login form elements
            var loginInputs = document.querySelectorAll('#login-form input[type="text"], #login-form input[type="password"]');
            loginInputs.forEach(function(input) {
                input.classList.add('form-input');
            });

            var loginButton = document.querySelector('#login-form input[type="submit"]');
            if (loginButton) {
                loginButton.value = "Giriş Yap";
            }

            // Hide unnecessary elements
            var loginLinks = document.querySelectorAll('#login-form a');
            loginLinks.forEach(function(link) {
                link.style.display = 'none';
            });

            // Hide the text shown in the image
            var guestAccessText = document.querySelectorAll('.login-form-section p, .login-form-section h1, .login-form-section h2, .login-form-section h3');
            guestAccessText.forEach(function(element) {
                element.style.display = 'none';
            });

            // Hide any guest access buttons
            var guestButtons = document.querySelectorAll('.login-form-section a.btn, .login-form-section button.btn');
            guestButtons.forEach(function(button) {
                button.style.display = 'none';
            });
        }

        // Get tab elements
        var loginTab = document.getElementById('login-tab');
        var registerTab = document.getElementById('register-tab');
        var loginForm = document.getElementById('login-form');
        var registerForm = document.getElementById('register-form');

        // Add click event listeners to tabs
        loginTab.addEventListener('click', function() {
            loginTab.classList.add('active');
            registerTab.classList.remove('active');
            loginForm.style.display = 'block';
            registerForm.style.display = 'none';
        });

        registerTab.addEventListener('click', function() {
            registerTab.classList.add('active');
            loginTab.classList.remove('active');
            registerForm.style.display = 'block';
            loginForm.style.display = 'none';
        });

        // Run enhancement functions
        enhanceLoginForm();
    });
</script>
</body>
</html>