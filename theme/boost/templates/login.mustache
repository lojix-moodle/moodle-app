{{! @template theme_boost/login }}
{{> theme_boost/head }}

<body {{{ bodyattributes }}} id="page-login-index">
{{> core/local/toast/wrapper }}

<style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap');

    body#page-login-index {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        background: linear-gradient(135deg, #1f1c2c, #928dab);
        font-family: 'Inter', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .login-wrapper {
        width: 100%;
        max-width: 400px;
        padding: 20px;
        box-sizing: border-box;
    }

    .login-card {
        background: rgba(255,255,255,0.1);
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.3);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        animation: fadeIn 0.4s ease;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(-20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .login-card h2 {
        text-align: center;
        margin-bottom: 10px;
        font-size: 24px;
        font-weight: 600;
        color: #fff;
    }

    .login-card p {
        text-align: center;
        font-size: 13px;
        margin-bottom: 20px;
        color: #dbe4ea;
    }

    form {
        display: flex;
        flex-direction: column;
    }

    input[type="text"],
    input[type="password"] {
        padding: 12px 16px;
        margin-bottom: 16px;
        border: none;
        border-radius: 8px;
        font-size: 15px;
        outline: none;
        transition: box-shadow 0.2s;
    }

    input[type="text"]:focus,
    input[type="password"]:focus {
        box-shadow: 0 0 10px rgba(103, 58, 183, 0.5);
    }

    .btn-primary {
        background: linear-gradient(90deg, #6a11cb, #2575fc);
        color: #fff;
        padding: 12px;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 15px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        opacity: 0.95;
        transform: scale(1.02);
    }

    .links {
        margin-top: 15px;
        text-align: center;
        font-size: 13px;
    }

    .links a {
        color: #81d4fa;
        text-decoration: none;
        margin: 0 8px;
    }

    .links a:hover {
        text-decoration: underline;
    }

    @media(max-width: 480px){
        .login-card {
            padding: 30px 20px;
        }
    }
</style>

<div class="login-wrapper">
    <div class="login-card">
        <h2>Hoş Geldiniz</h2>
        <p>Lütfen giriş bilgilerinizi girin</p>
        {{{ output.main_content }}}
        <div class="links">
            <a href="#">Şifremi Unuttum</a>
            <a href="#">Kayıt Ol</a>
        </div>
    </div>
</div>

{{> theme_boost/footer }}

</body>
</html>

