{{! @template theme_boost/login }}
{{> theme_boost/head }}

<body {{{ bodyattributes }}} id="page-login-index">
{{> core/local/toast/wrapper }}

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body#page-login-index {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        perspective: 1000px;
        overflow-x: hidden;
    }

    #page-wrapper {
        width: 100%;
        max-width: 480px;
        margin: 0 auto;
        padding: 20px;
        perspective: 1000px;
        display: flex;
        min-height: 100vh;
        align-items: center;
        justify-content: center;
    }

    .login-card {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        position: relative;
        transform-style: preserve-3d;
        animation: cardFloat 6s ease-in-out infinite;
        width: 100%;
    }

    @keyframes cardFloat {
        0%, 100% { transform: translateY(0) rotate3d(1, 1, 0, 0deg); }
        50% { transform: translateY(-10px) rotate3d(1, 1, 0, 2deg); }
    }

    .login-header {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        padding: 35px 20px;
        text-align: center;
        color: white;
        position: relative;
        overflow: hidden;
    }

    .login-header::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: linear-gradient(45deg, rgba(255,255,255,0.1), rgba(255,255,255,0));
        transform: rotate(45deg);
        animation: shimmer 8s linear infinite;
    }

    @keyframes shimmer {
        0% { transform: translateX(-100%) rotate(45deg); }
        100% { transform: translateX(100%) rotate(45deg); }
    }

    .login-logo {
        font-size: 42px;
        font-weight: 700;
        letter-spacing: -1px;
        margin-bottom: 8px;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
        animation: pulsate 2s ease-out infinite;
    }

    @keyframes pulsate {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
    }

    .login-form-section {
        padding: 30px 25px;
        position: relative;
    }

    .login-form-section::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at center, rgba(255,255,255,0.7) 0%, rgba(255,255,255,0) 70%);
        mix-blend-mode: overlay;
        pointer-events: none;
    }

    /* Tab Navigation */
    .login-tabs {
        display: flex;
        position: relative;
        margin-bottom: 30px;
    }

    .login-tab {
        flex: 1;
        text-align: center;
        padding: 15px 0;
        font-size: 16px;
        font-weight: 600;
        color: #8a8a8a;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        position: relative;
        z-index: 1;
    }

    .active-tab-indicator {
        position: absolute;
        bottom: 0;
        height: 3px;
        width: 50%;
        background: linear-gradient(90deg, #6a11cb, #2575fc);
        transition: transform 0.6s cubic-bezier(0.68, -0.55, 0.27, 1.55);
        border-radius: 3px;
        transform-origin: left;
    }

    .login-tab.active {
        color: #6a11cb;
    }

    /* Form Elements */
    .form-group {
        position: relative;
        margin-bottom: 24px;
    }

    .form-input {
        width: 100%;
        height: 50px;
        font-size: 14px;
        padding: 10px 15px;
        padding-left: 45px;
        background: white;
        border: 1px solid #e1e5eb;
        border-radius: 10px;
        color: #495057;
        transition: all 0.3s;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.05);
    }

    .form-input:focus {
        border-color: #6a11cb;
        box-shadow: 0 5px 15px rgba(106, 17, 203, 0.1);
        outline: none;
    }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 17px;
        color: #b0b0b0;
        transition: all 0.3s;
    }

    .form-input:focus + .input-icon {
        color: #6a11cb;
    }

    .form-group label {
        position: absolute;
        top: 0;
        left: 45px;
        font-size: 13px;
        color: transparent;
        pointer-events: none;
        transition: all 0.3s;
    }

    .form-input:focus ~ label,
    .form-input:not(:placeholder-shown) ~ label {
        top: -20px;
        left: 0;
        font-size: 12px;
        color: #6a11cb;
        font-weight: 500;
    }

    .submit-btn {
        display: block;
        width: 100%;
        height: 50px;
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        margin-top: 20px;
        box-shadow: 0 5px 15px rgba(106, 17, 203, 0.3);
        position: relative;
        overflow: hidden;
    }

    .submit-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: all 0.5s;
    }

    .submit-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(106, 17, 203, 0.4);
    }

    .submit-btn:hover::before {
        left: 100%;
    }

    .submit-btn:active {
        transform: translateY(0);
    }

    /* Register Form */
    #register-form {
        display: none;
        opacity: 0;
        transform: translateX(20px);
        transition: all 0.5s;
    }

    #login-form {
        opacity: 1;
        transform: translateX(0);
        transition: all 0.5s;
    }

    /* Hide unnecessary elements */
    .login-form-section a,
    .login-form-section .sr-only,
    .login-form-section .alert,
    .login-form-section .visually-hidden,
    .login-form-section .divider,
    #page-footer,
    .login-form-section p,
    .login-form-section h1,
    .login-form-section h2,
    .login-form-section h3,
    .login-form-section a.btn,
    .login-form-section button.btn {
        display: none !important;
    }

    /* Loader animation */
    .loader {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        display: none;
        width: 30px;
        height: 30px;
        border: 3px solid rgba(255,255,255,0.3);
        border-radius: 50%;
        border-top-color: white;
        animation: spin 1s ease-in-out infinite;
    }

    @keyframes spin {
        0% { transform: translate(-50%, -50%) rotate(0deg); }
        100% { transform: translate(-50%, -50%) rotate(360deg); }
    }

    .submitting .loader {
        display: block;
    }

    .submitting .btn-text {
        opacity: 0;
    }

    /* Responsive */
    @media (max-width: 480px) {
        #page-wrapper {
            padding: 15px;
        }

        .login-header {
            padding: 25px 15px;
        }

        .login-form-section {
            padding: 25px 20px;
        }

        .login-card {
            margin: 20px 0;
        }
    }
</style>

<div id="page-wrapper">
    {{{ output.standard_top_of_body_html }}}

    <div class="login-card">
        <div class="login-header">
            <div class="login-logo">Lojix</div>
        </div>

        <div class="login-form-section">
            <div class="login-tabs">
                <div class="login-tab active" id="login-tab">Giriş</div>
                <div class="login-tab" id="register-tab">Kayıt Ol</div>
                <div class="active-tab-indicator"></div>
            </div>

            <!-- Login Form (Default) -->
            <!-- Login Form (Default) -->
            <div id="login-form">
                {{{ output.main_content }}}

                <button type="submit" class="submit-btn">
                    <span class="btn-text">Giriş Yap</span>
                    <div class="loader"></div>
                </button>
            </div>

            <!-- Register Form (Hidden initially) -->
            <div id="register-form">
                <form method="post" action="register.php" id="register-form-element">
                    <div class="form-group">
                        <input type="text" id="fullname" name="fullname" class="form-input" placeholder=" " required>
                        <i class="input-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
