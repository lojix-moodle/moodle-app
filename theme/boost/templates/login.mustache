{{! @template theme_boost/login }}

{{> theme_boost/head }}

<body {{{ bodyattributes }}} id="page-login-index">
{{> core/local/toast/wrapper }}

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap');
    @import url('https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css');

    body#page-login-index {
        margin: 0;
        padding: 0;
        height: 100vh;
        background: linear-gradient(135deg, #1e3c72, #2a5298, #4e54c8);
        font-family: 'Poppins', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        color: #fff;
    }

    .login-box {
        background: rgba(255, 255, 255, 0.06);
        border-radius: 20px;
        padding: 40px;
        width: 100%;
        max-width: 400px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        animation: fadeInDown 0.8s ease;
    }

    .login-box .logo {
        text-align: center;
        margin-bottom: 20px;
    }

    .login-box .logo img {
        max-width: 80px;
    }

    .login-box h2 {
        text-align: center;
        font-size: 26px;
        font-weight: 600;
        margin-bottom: 10px;
        color: #fff;
    }

    .login-box p {
        text-align: center;
        color: #ddd;
        font-size: 14px;
        margin-bottom: 30px;
    }

    .login-box form {
        display: flex;
        flex-direction: column;
    }

    .login-box input[type="text"],
    .login-box input[type="password"] {
        padding: 12px;
        margin-bottom: 15px;
        border: none;
        border-radius: 8px;
    }

    .login-box .btn-primary {
        background-color: #4e54c8;
        border: none;
        padding: 12px;
        border-radius: 8px;
        font-weight: bold;
        margin-bottom: 10px;
        transition: background 0.3s;
    }

    .login-box .btn-primary:hover {
        background-color: #3b44a1;
    }

    .login-box .additional-links {
        text-align: center;
        font-size: 13px;
        margin-top: 15px;
    }

    .login-box .additional-links a {
        color: #fff;
        text-decoration: underline;
    }

</style>

<div id="page-wrapper">
    {{{ output.standard_top_of_body_html }}}

    <div class="login-box animate__animated animate__fadeInDown">
        <div class="logo">
            <img src="/theme/image.php?theme=boost&component=core&image=logo" alt="Site Logo">
        </div>
        <h2>Hoş Geldiniz</h2>
        <p>Lütfen giriş bilgilerinizi girin</p>

        <div>
            {{{ output.main_content }}}
        </div>
    </div>

    {{> theme_boost/footer }}
</div>

</body>
</html>

{{#js}}
    M.util.js_pending('theme_boost/loader');
    require(['theme_boost/loader'], function() {
    M.util.js_complete('theme_boost/loader');
    });
{{/js}}
