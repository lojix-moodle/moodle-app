{{!
    @template theme_boost/login
    Modern ve etkileyici login sayfası tasarımı
}}
{{> theme_boost/head }}

<body {{{ bodyattributes }}}>
{{> core/local/toast/wrapper}}

<div id="page-wrapper" class="d-flex align-items-center justify-content-center vh-100 bg-gradient">

    {{{ output.standard_top_of_body_html }}}

    <div class="login-card glass-effect shadow-lg p-5 rounded animate__animated animate__zoomIn">
        <div class="text-center mb-4">
            <img src="/theme/image.php?theme=boost&component=core&image=logo" alt="Site Logo" class="mb-3" style="max-width: 120px;">
            <h2 class="fw-bold text-white">Hoş Geldiniz</h2>
            <p class="text-light">Hesabınıza giriş yaparak devam edin</p>
        </div>
        <div>
            {{{ output.main_content }}}
        </div>
        <div class="text-center mt-4">
            <p class="text-light">Hesabınız yok mu? <a href="/login/signup.php" class="text-decoration-none text-warning fw-bold">Kayıt Ol</a></p>
        </div>
    </div>

    {{> theme_boost/footer }}
</div>

</body>
</html>
{{#js}}
    M.util.js_pending('theme_boost/loader');
    require(['theme_boost/loader'], function() {
    M.util.js_complete('theme_boost/loader');
    });
{{/js}}