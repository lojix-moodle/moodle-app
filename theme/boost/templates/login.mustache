{{! @template theme_boost/login }}
{{> theme_boost/head }}

<body {{{ bodyattributes }}} id="page-login-index">
{{> core/local/toast/wrapper }}

<style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap');

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body#page-login-index {
        font-family: 'Roboto', sans-serif;
        background-color: #f5f5f9;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    #page-wrapper {
        width: 100%;
        max-width: 1000px;
        margin: 0 auto;
    }

    .login-wrapper {
        display: flex;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        margin: 20px;
    }

    /* Left side - Branding */
    .login-logo-section {
        width: 40%;
        background-color: #1e88e5;
        color: #fff;
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 40px 20px;
    }

    .login-logo {
        font-size: 48px;
        font-weight: 700;
        margin-bottom: 20px;
        letter-spacing: -1px;
    }

    .login-logo-desc {
        font-size: 16px;
        font-weight: 300;
        line-height: 1.6;
        max-width: 260px;
        margin: 0 auto;
    }

    /* Right side - Form */
    .login-form-section {
        width: 60%;
        padding: 40px;
    }

    .login-title {
        font-size: 28px;
        font-weight: 500;
        color: #333;
        margin-bottom: 10px;
    }

    .login-subtitle {
        font-size: 16px;
        color: #666;
        margin-bottom: 30px;
    }

    /* Override default form styles */
    .login-form-section form {
        display: flex;
        flex-direction: column;
    }

    .login-form-section .form-group {
        margin-bottom: 20px;
    }

    .login-form-section .form-label {
        font-size: 14px;
        font-weight: 500;
        margin-bottom: 8px;
        display: block;
        color: #333;
    }

    .login-form-section .form-control {
        width: 100%;
        height: 48px;
        padding: 0 15px;
        font-size: 16px;
        border: 1px solid #e0e0e0;
        border-radius: 4px;
        background-color: #fafafa;
        transition: all 0.2s ease;
    }

    .login-form-section .form-control:focus {
        border-color: #1e88e5;
        background-color: #fff;
        box-shadow: 0 0 0 3px rgba(30, 136, 229, 0.15);
        outline: none;
    }

    .login-form-section .btn-primary {
        height: 48px;
        background-color: #1e88e5;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        font-weight: 500;
        cursor: pointer;
        transition: background-color 0.2s;
        margin-top: 10px;
    }

    .login-form-section .btn-primary:hover {
        background-color: #1976d2;
    }

    /* Password recovery link */
    .login-form-section .forgot-link {
        text-align: right;
        margin: 15px 0;
    }

    .login-form-section .forgot-link a {
        color: #1e88e5;
        text-decoration: none;
        font-size: 14px;
    }

    .login-form-section .forgot-link a:hover {
        text-decoration: underline;
    }

    /* First time section */
    .new-account-section {
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #eee;
    }

    .new-account-title {
        font-size: 16px;
        font-weight: 500;
        color: #333;
        margin-bottom: 8px;
    }

    .new-account-text {
        font-size: 14px;
        color: #666;
        margin-bottom: 15px;
    }

    .new-account-button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #f5f5f5;
        border: 1px solid #e0e0e0;
        border-radius: 4px;
        color: #333;
        font-size: 14px;
        font-weight: 500;
        text-decoration: none;
        text-align: center;
        transition: all 0.2s ease;
    }

    .new-account-button:hover {
        background-color: #e0e0e0;
    }

    /* Make it responsive */
    @media (max-width: 768px) {
        .login-wrapper {
            flex-direction: column;
        }

        .login-logo-section,
        .login-form-section {
            width: 100%;
        }

        .login-logo-section {
            padding: 30px 20px;
        }
    }

    /* Fix for Moodle's form elements */
    .login-form-section div,
    .login-form-section form,
    .login-form-section fieldset {
        width: 100%;
    }

    .login-form-section input[type="text"],
    .login-form-section input[type="password"] {
        width: 100%;
        height: 48px;
        padding: 0 15px;
        font-size: 16px;
        border: 1px solid #e0e0e0;
        border-radius: 4px;
        background-color: #fafafa;
        transition: all 0.2s ease;
        margin-bottom: 15px;
    }

    .login-form-section input[type="text"]:focus,
    .login-form-section input[type="password"]:focus {
        border-color: #1e88e5;
        background-color: #fff;
        box-shadow: 0 0 0 3px rgba(30, 136, 229, 0.15);
        outline: none;
    }

    .login-form-section label {
        font-size: 14px;
        font-weight: 500;
        margin-bottom: 8px;
        display: block;
        color: #333;
    }

    .login-form-section button,
    .login-form-section input[type="submit"] {
        display: block;
        width: 100%;
        height: 48px;
        background-color: #1e88e5;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        font-weight: 500;
        cursor: pointer;
        transition: background-color 0.2s;
        margin-top: 10px;
    }

    .login-form-section button:hover,
    .login-form-section input[type="submit"]:hover {
        background-color: #1976d2;
    }

    .login-form-section a {
        color: #1e88e5;
        text-decoration: none;
    }

    .login-form-section a:hover {
        text-decoration: underline;
    }

    /* Hide any unnecessary Moodle elements */
    .login-form-section .sr-only,
    .login-form-section .visually-hidden {
        display: none;
    }

    /* Footer adjustments */
    #page-footer {
        display: none;
    }
</style>

<div id="page-wrapper">
    {{{ output.standard_top_of_body_html }}}

    <div class="login-wrapper">
        <!-- Left section with logo and description -->
        <div class="login-logo-section">
            <div class="login-logo">Lojix</div>
            <div class="login-logo-desc">Profesyonel depo yönetim sistemi ile işlerinizi kolaylaştırın</div>
        </div>

        <!-- Right section with login form -->
        <div class="login-form-section">
            <h1 class="login-title">Giriş Paneli</h1>
            <p class="login-subtitle">Hesabınıza erişmek için bilgilerinizi girin</p>

            <!-- This is where Moodle injects the login form -->
            <div id="login-form-container">
                {{{ output.main_content }}}
            </div>

            <!-- New account section -->
            <div class="new-account-section">
                <h2 class="new-account-title">İlk kez mi buradasınız?</h2>
                <p class="new-account-text">Sisteme tam erişim sağlamak için önce bir hesap oluşturmanız gerekir.</p>
                <a href="#" class="new-account-button">Yeni hesap oluştur</a>
            </div>
        </div>
    </div>
</div>

</body>
</html>

{{#js}}
    M.util.js_pending('theme_boost/loader');
    require(['theme_boost/loader'], function() {
    M.util.js_complete('theme_boost/loader');

    // Additional JavaScript to fix form elements
    document.addEventListener('DOMContentLoaded', function() {
    // Add classes to login button
    var loginBtn = document.querySelector('input[type="submit"]');
    if (loginBtn) {
    loginBtn.classList.add('login-button');
    }

    // Adjust any form field labels
    var labels = document.querySelectorAll('form label');
    labels.forEach(function(label) {
    label.classList.add('form-label');
    });

    // Adjust any form inputs
    var inputs = document.querySelectorAll('form input[type="text"], form input[type="password"]');
    inputs.forEach(function(input) {
    input.classList.add('form-input');
    });
    });
    });
{{/js}}