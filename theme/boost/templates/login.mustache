{{! @template theme_boost/login }}
{{> theme_boost/head }}

<body {{{ bodyattributes }}} id="page-login-index">
{{> core/local/toast/wrapper }}

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap');

    body#page-login-index {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #2c3e50, #4ca1af);
        display: flex;
        justify-content: center;
        align-items: center;
        color: #fff;
    }

    .login-wrapper {
        background: rgba(255, 255, 255, 0.05);
        padding: 30px;
        border-radius: 16px;
        width: 100%;
        max-width: 380px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        animation: slideIn 0.4s ease;
    }

    @keyframes slideIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .login-wrapper h2 {
        text-align: center;
        margin-bottom: 8px;
        font-size: 22px;
        font-weight: 600;
    }

    .login-wrapper p.subtitle {
        text-align: center;
        font-size: 13px;
        color: #dcefff;
        margin-bottom: 20px;
    }

    .login-wrapper .form-input input[type="text"],
    .login-wrapper .form-input input[type="password"] {
        width: 100%;
        padding: 10px 12px;
        margin-bottom: 14px;
        border-radius: 8px;
        border: none;
        font-size: 14px;
        color: #000;
    }

    .login-wrapper .btn-primary {
        width: 100%;
        padding: 10px;
        background: linear-gradient(90deg, #00b4db, #0083b0);
        color: white;
        font-weight: 600;
        border: none;
        border-radius: 8px;
        transition: background 0.3s ease;
        cursor: pointer;
    }

    .login-wrapper .btn-primary:hover {
        background: linear-gradient(90deg, #0083b0, #00b4db);
    }

    .login-wrapper .info {
        margin-top: 18px;
        font-size: 13px;
        color: #eee;
    }

    .login-wrapper .info a {
        color: #a0e7ff;
        text-decoration: none;
    }

    .login-wrapper .info a:hover {
        text-decoration: underline;
    }

    .login-wrapper .firsttime {
        margin-top: 10px;
        font-size: 12px;
        opacity: 0.9;
        color: #dbefff;
    }

</style>

<div id="page-wrapper">
    {{{ output.standard_top_of_body_html }}}

    <div class="login-wrapper">
        <h2>Giriş Paneli</h2>
        <p class="subtitle">Hesabınıza erişmek için bilgilerinizi girin</p>
        <p style="text-align: center; font-size: 13px; color: #a5f1ff; margin-bottom: 20px;">
            Log in to <strong>Lojix:Depo Yönetim Paneli</strong>
        </p>
        {{{ output.main_content }}}

        <div class="firsttime">
            <p>İlk kez mi buradasınız?</p>
            <p>Sisteme tam erişim sağlamak için önce bir hesap oluşturmanız gerekir.</p>
        </div>
    </div>

    {{> theme_boost/footer }}
</div>

</body>
</html>

{{#js}}
    M.util.js_pending('theme_boost/loader');
    require(['theme_boost/loader'], function() {
    M.util.js_complete('theme_boost/loader');
    });
{{/js}}
