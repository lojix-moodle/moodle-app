{{!
    @template theme_boost/login
    Modern login sayfası tasarımı – Cam efektli, gradient arka planlı
}}
{{> theme_boost/head }}

<body {{{ bodyattributes }}} id="page-login-index">
{{> core/local/toast/wrapper }}

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap');
    @import url('https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css');

    body#page-login-index {
        margin: 0;
        padding: 0;
        height: 100vh;
        background: linear-gradient(135deg, #1e3c72, #2a5298, #4e54c8);
        font-family: 'Poppins', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        color: #fff;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        max-width: 1200px;
        padding: 20px;
    }

    .login-wrapper {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.25);
        border-radius: 20px;
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
        padding: 40px;
        max-width: 420px;
        width: 100%;
        animation: fadeInDown 0.8s ease;
        text-align: center;
    }

    .login-wrapper .logo {
        margin-bottom: 20px;
    }

    .login-wrapper .logo img {
        max-width: 100px;
    }

    .login-wrapper h2 {
        font-weight: 600;
        font-size: 28px;
        margin-bottom: 10px;
        color: #fff;
    }

    .login-wrapper p {
        font-size: 14px;
        color: #ddd;
        margin-bottom: 30px;
    }

    .login-wrapper .form-content {
        margin-bottom: 20px;
    }

    .login-wrapper .btn-group {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 20px;
    }

    .login-wrapper .btn-primary {
        background-color: #4e54c8;
        border: none;
        padding: 10px 24px;
        font-weight: 600;
        border-radius: 8px;
        transition: background 0.3s;
        color: #fff;
    }

    .login-wrapper .btn-primary:hover {
        background-color: #3b44a1;
    }

    .login-wrapper .btn-outline-light {
        background: transparent;
        border: 1px solid #fff;
        color: #fff;
        padding: 10px 24px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s;
    }

    .login-wrapper .btn-outline-light:hover {
        background-color: #fff;
        color: #4e54c8;
    }

    @media (max-width: 768px) {
        .login-wrapper {
            padding: 20px;
        }

        .login-wrapper h2 {
            font-size: 24px;
        }

        .login-wrapper p {
            font-size: 12px;
        }
    }
</style>

<div id="page-wrapper">
    {{{ output.standard_top_of_body_html }}}

    <div class="login-container">
        <div class="login-wrapper animate__animated animate__fadeInDown">
            <div class="logo">
                <img src="/theme/image.php?theme=boost&component=core&image=logo" alt="Site Logo">
            </div>
            <h2>Hoş Geldiniz</h2>
            <p>Lütfen giriş yaparak devam edin</p>

            <div class="form-content">
                {{{ output.main_content }}}
            </div>

            <div class="btn-group">
                <a href="/login/index.php" class="btn btn-primary">Giriş Yap</a>
                <a href="/login/signup.php" class="btn btn-outline-light">Kayıt Ol</a>
            </div>
        </div>
    </div>

    {{> theme_boost/footer }}
</div>

</body>
</html>

{{#js}}
    M.util.js_pending('theme_boost/loader');
    require(['theme_boost/loader'], function() {
    M.util.js_complete('theme_boost/loader');
    });
{{/js}}