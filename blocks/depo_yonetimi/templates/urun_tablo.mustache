<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
    <a href="{{ekle_url}}" class="btn btn-primary">+ Ürün Ekle</a>
    <a href="{{back_url}}" class="btn btn-secondary">← Depolara Dön</a>
</div>

<table class="generaltable">
    <thead>
    <tr>
        <th>Ürün Adı</th>
        <th>Adet</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    {{#urunler}}
        <tr>
            <td>{{name}}</td>
            <td>{{adet}}</td>
            <td>
                <a href="{{duzenle_url}}" class="btn btn-primary btn-sm" onclick="return confirm('Bu ürünü düzenlemek istediğinize emin misiniz?');">Düzenle</a>
                <a href="{{sil_url}}" class="btn btn-danger btn-sm" onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">Sil</a>
            </td>
        </tr>
    {{/urunler}}
    {{^urunler}}
        <tr>
            <td colspan="3">Henüz ürün eklenmemiş.</td>
        </tr>
    {{/urunler}}
    </tbody>
</table>
