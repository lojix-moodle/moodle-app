<div style="display: flex; justify-content: space-between">
    <a href="{{ekle_url}}" class="btn btn-primary">+ Ürün Ekle</a>
    <a href="{{kategori_ekle_url}}" class="btn btn-primary">+ Kategori Ekle</a>
    <a href="{{back_url}}" class="back-link">← Depolara dön</a>
</div>
<br>
<table class="generaltable">
    <thead>
    <tr>
        <th>Kategori</th>
        <th>Ürün Adı</th>
        <th>Adet</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    {{#urunler}}
        <tr>
            <td>{{kategori_name}}</td>
            <td>{{name}}</td>
            <td>{{adet}}</td>
            <td>
                <a href="{{duzenle_url}}" class="btn btn-primary btn-sm" onclick="return confirm('Bu ürünü düzenlemek istediğinize emin misiniz?');">Düzenle</a>
                <a href="{{sil_url}}" class="btn btn-danger" onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">Ürünü Sil</a>

            </td>
        </tr>
    {{/urunler}}
    </tbody>
</table>