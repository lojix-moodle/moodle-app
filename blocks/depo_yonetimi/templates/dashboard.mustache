{{!
    Dashboard şablonu - Depo Yönetimi
}}
<div class="depo-dashboard">
    <div class="depo-dashboard-header">
        <h2>Depo Yönetimi Dashboard</h2>
    </div>

    <!-- Özet Göstergeler -->
    <div class="depo-summary-cards">
        <div class="summary-card daily">
            <h3>Günlük Özet</h3>
            <div class="summary-values">
                <div class="summary-value">
                    <span class="value">{{daily_summary.entries}}</span>
                    <span class="label">Giriş</span>
                </div>
                <div class="summary-value">
                    <span class="value">{{daily_summary.exits}}</span>
                    <span class="label">Çıkış</span>
                </div>
                <div class="summary-value">
                    <span class="value">{{daily_summary.orders}}</span>
                    <span class="label">Sipariş</span>
                </div>
            </div>
        </div>

        <div class="summary-card weekly">
            <h3>Haftalık Özet</h3>
            <div class="summary-values">
                <div class="summary-value">
                    <span class="value">{{weekly_summary.entries}}</span>
                    <span class="label">Giriş</span>
                </div>
                <div class="summary-value">
                    <span class="value">{{weekly_summary.exits}}</span>
                    <span class="label">Çıkış</span>
                </div>
                <div class="summary-value">
                    <span class="value">{{weekly_summary.orders}}</span>
                    <span class="label">Sipariş</span>
                </div>
            </div>
        </div>

        <div class="summary-card monthly">
            <h3>Aylık Özet</h3>
            <div class="summary-values">
                <div class="summary-value">
                    <span class="value">{{monthly_summary.entries}}</span>
                    <span class="label">Giriş</span>
                </div>
                <div class="summary-value">
                    <span class="value">{{monthly_summary.exits}}</span>
                    <span class="label">Çıkış</span>
                </div>
                <div class="summary-value">
                    <span class="value">{{monthly_summary.net_change}}</span>
                    <span class="label">Net Değişim</span>
                </div>
            </div>
        </div>
    </div>

    <!-- KPI'lar -->
    <div class="depo-kpi-cards">
        <div class="kpi-card">
            <div class="kpi-value">₺{{kpi_data.total_stock_value}}</div>
            <div class="kpi-label">Toplam Stok Değeri</div>
        </div>

        <div class="kpi-card">
            <div class="kpi-value">₺{{kpi_data.monthly_exit_value}}</div>
            <div class="kpi-label">Aylık Çıkış Değeri</div>
        </div>

        <div class="kpi-card">
            <div class="kpi-value">{{kpi_data.stock_turnover}}</div>
            <div class="kpi-label">Stok Devir Hızı</div>
        </div>

        <div class="kpi-card">
            <div class="kpi-value">%{{kpi_data.order_completion_rate}}</div>
            <div class="kpi-label">Sipariş Tamamlanma Oranı</div>
        </div>
    </div>

    <!-- Grafikler ve Tablolar -->
    <div class="depo-charts-tables">
        <!-- Stok Seviyeleri -->
        <div class="depo-chart-container">
            <h3>Stok Seviyeleri</h3>
            <div class="stock-levels-chart" id="stockLevelsChart"></div>
        </div>

        <!-- Bekleyen Siparişler -->
        <div class="depo-table-container">
            <h3>Bekleyen Siparişler</h3>
            <table class="depo-table pending-orders-table">
                <thead>
                <tr>
                    <th>Ürün</th>
                    <th>Miktar</th>
                    <th>Tarih</th>
                    <th>İsteyen</th>
                </tr>
                </thead>
                <tbody>
                {{#pending_orders}}
                    <tr>
                        <td>{{product_name}}</td>
                        <td>{{quantity}}</td>
                        <td>{{order_date}}</td>
                        <td>{{requested_by}}</td>
                    </tr>
                {{/pending_orders}}
                {{^pending_orders}}
                    <tr>
                        <td colspan="4" class="no-data">Bekleyen sipariş bulunmamaktadır.</td>
                    </tr>
                {{/pending_orders}}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Kritik Stok Uyarıları -->
    <div class="depo-alerts-container">
        <h3>Kritik Stok Uyarıları</h3>
        <div class="critical-alerts">
            {{#critical_stock_alerts}}
                <div class="alert-item {{stock_status}}">
                    <div class="alert-name">{{name}}</div>
                    <div class="alert-level">
                        <div class="progress-bar">
                            <div class="progress" style="width: {{percentage}}%"></div>
                        </div>
                        <div class="alert-values">
                            <span>{{current_stock}} / {{max_stock}}</span>
                        </div>
                    </div>
                </div>
            {{/critical_stock_alerts}}
            {{^critical_stock_alerts}}
                <div class="no-alerts">Kritik stok uyarısı bulunmamaktadır.</div>
            {{/critical_stock_alerts}}
        </div>
    </div>

    <!-- Son Hareketler -->
    <div class="depo-recent-activities">
        <h3>Son Hareketler</h3>
        <table class="depo-table recent-activities-table">
            <thead>
            <tr>
                <th>İşlem</th>
                <th>Ürün</th>
                <th>Miktar</th>
                <th>Tarih</th>
                <th>Kullanıcı</th>
            </tr>
            </thead>
            <tbody>
            {{#recent_activities}}
                <tr>
                    <td>{{type}}</td>
                    <td>{{name}}</td>
                    <td>{{quantity}}</td>
                    <td>{{date}}</td>
                    <td>{{user}}</td>
                </tr>
            {{/recent_activities}}
            {{^recent_activities}}
                <tr>
                    <td colspan="5" class="no-data">Son işlem bulunmamaktadır.</td>
                </tr>
            {{/recent_activities}}
            </tbody>
        </table>
    </div>
</div>

<script>
    // Stok seviyeleri grafiği için veriyi hazırla
    document.addEventListener('DOMContentLoaded', function() {
        // Chart.js veya tercih ettiğiniz kütüphane ile grafik oluşturma işlemleri burada
    });
</script>