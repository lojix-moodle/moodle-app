<div class="mb-4">
    {{^varyasyonlar}}
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i> Seçilen kriterlere uygun ürün bulunamadı.
        </div>
    {{/varyasyonlar}}

    {{#varyasyonlar}}
        <div class="table-responsive">
            <table class="table table-hover stock-table">
                <thead class="table-light">
                <tr>
                    <th>Ürün Adı</th>
                    <th>Depo</th>
                    <th>Kategori</th>
                    <th>Varyasyon</th>
                    <th class="text-center">Stok Durumu</th>
                    <th class="text-end">İşlemler</th>
                </tr>
                </thead>
                <tbody>
                {{#varyasyonlar}}
                    <tr>
                        <td>
                            <strong>{{parent_name}}</strong>
                            {{^parent_name}}{{name}}{{/parent_name}}
                        </td>
                        <td>
                            <span class="badge bg-light text-dark border">{{depo_adi}}</span>
                        </td>
                        <td>
                            <span class="badge bg-light text-dark border">{{kategori_adi}}</span>
                        </td>
                        <td>
                            {{#color}}
                                <span class="badge bg-secondary me-1">{{color}}</span>
                            {{/color}}
                            {{#size}}
                                <span class="badge bg-light text-dark">{{size}}</span>
                            {{/size}}
                        </td>
                        <td class="text-center">
                            <span class="stock-tag {{stok_class}}">
                                {{adet}} adet <i class="fas fa-circle-notch ms-1"></i>
                            </span>
                        </td>
                        <td class="text-end">
                            <a href="{{duzenle_url}}" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit me-1"></i> Stok Düzenle
                            </a>
                        </td>
                    </tr>
                {{/varyasyonlar}}
                </tbody>
            </table>
        </div>
    {{/varyasyonlar}}

    {{#has_pagination}}
        <div class="mt-4">
            {{{pagination_html}}}
        </div>
    {{/has_pagination}}
</div>